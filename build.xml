<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="build" name="Create nugget packaging for the extension">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    
	<property name="extension.name" value="com.castsoftware.uc.simulatorgenerator" />
	
	<!-- Local eclipse project directory -->  
	<property name="project.dir" value="C:\Users\mmr\workspace\${extension.name}"/>
	
	<target name="build">
		<!--Nugget command to package the extension -->
		<exec executable="cmd">
		    <arg value="/c"/>
		    <arg value="nuget_package.bat"/>
			<arg value="${version}"/>
		</exec>

    </target>
</project>
